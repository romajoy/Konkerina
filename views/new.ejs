<body>
    <div class="container">
        <br>
        <h1>You went on a date! Tell me everything...</h1> <br>
        <form action="/dates" method="POST">
            <input class="form-control" type="text" name="name" placeholder="Who did you go out with?" /> <br/>
            <input class="form-control" type="text" name="matchedOn" placeholder="What app matched you?" /> <br/>
            When was your date? <input class="form-control" type="date" name="when"/><br/>
            <%console.log('Hello????')%>
            <input class="form-control" type="text" name="where" placeholder="Where did you go?"/> <br/>
            <textarea class="form-control" type="text" name="thoughts" placeholder="What are your thoughts?"></textarea> <br/>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                <label class="form-check-label" for="flexSwitchCheckChecked">Would you go out again?</label>
            </div> <br>
            <input class="btn btn-outline-success" type="submit" value="Add Date!"/>
            <a class="btn btn-outline-warning" href="/dates">Return to Dates</a>
        </form>
    </div>
</body>
